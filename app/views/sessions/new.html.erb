<h1>Log in</h1>

<%= form_tag sessions_path do %>
  <%#= hidden_field_tag :destination_controller, @destination_controller || params[:controller] %>
  <%#= hidden_field_tag :destination_action, @destination_action || params[:action] %>
  <p>
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>
  <%= link_to "Forgot password", new_password_reset_path %>
  <%= label_tag :remember_me %>
  <%= check_box_tag :remember_me, 1, params[:rememeber_me] %>
  <p class="button"><%= submit_tag "Sign in" %></p>
<% end %>
